{
  "name": "marcelthole/openapi-merge",
  "description": "Merge multiple OpenAPI YML/JSON files into one",
  "type": "application",
  "keywords":[
    "openapi", "merge"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Marcel Thole",
      "role": "Creator"
    }
  ],
  "require": {
    "php": "^7.4 || ^8.0",
    "cebe/php-openapi": "^1.4.2"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "^9.4",
    "phpstan/phpstan": "^0.12.51",
    "doctrine/coding-standard": "^8.1"
  },
  "autoload": {
    "psr-4": {
      "OpenApiMerge\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "OpenApiMerge\\Tests\\": "tests"
    }
  },
  "scripts": {
    "ci": [
      "@cs-check",
      "@phpunit",
      "@phpstan"
    ],
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "phpunit": "phpunit --colors=always",
    "phpunit-coverage": "phpunit --colors=always --coverage-clover clover.xml",
    "phpstan": "phpstan analyse"
  },
  "config": {
    "sort-packages": true
  },
  "bin": [
    "bin/openapi-merge"
  ]
}