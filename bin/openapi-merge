#!/usr/bin/env php
<?php

use OpenApiMerge\Console\Application;
use OpenApiMerge\Console\Command\MergeCommand;
use OpenApiMerge\OpenApiMerge;
use OpenApiMerge\Reader\FileReader;
use OpenApiMerge\Writer\DefinitionWriter;

(static function () {
    $composerAutoload = [
        __DIR__ . '/../vendor/autoload.php',
        __DIR__ . '/../../../autoload.php',
    ];
    foreach ($composerAutoload as $autoload) {
        if (file_exists($autoload)) {
            require $autoload;
            break;
        }
    }
})();

$application = new Application(
    new MergeCommand(
        new OpenApiMerge(new FileReader()),
        new DefinitionWriter()
    )
);
exit($application->run($argv));